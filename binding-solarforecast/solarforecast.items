Group			gSolarForcast					"Solar Forecast"								<solarplant>
Switch			ForecastSolarHome_Test			"Test Switch"									<wallSwitch>	(gSolarForcast)		["Switch"]

// channel items
Number:Power	ForecastSolarHome_Actual_Power	"Power prediction for this moment"			<solarplant> (gSolarForcast,AUS_Service)    ["Measurement","Energy"]
{channel="solarforecast:fs-site:homeSite:power-actual", stateDescription=" "[ pattern="%.0f %unit%" ], unit="W"}
