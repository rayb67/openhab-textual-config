rule "RctMqttReset"
when
    Time cron "0 59 23 * * ?"
     or
    Item Test01 changed
then

	logInfo("RctMqttReset","Status PV_Error_LIM : "+PV_Error_LIM.state)
	postUpdate( PV_Error_LIM, "OFF")
	logInfo("RctMqttReset","Status PV_Error_LIM : "+PV_Error_LIM.state)
end

